import sys
import os

wd = os.getcwd()
print('Reading dictionaries...')

input_directory = wd + '/Input'
for currentpath, folders, files in os.walk(input_directory):
    for file in files:
        input_PANTHER_file = input_directory + '/' + file
        input_PANTHER = open(input_PANTHER_file, 'r', encoding = "utf-7")
